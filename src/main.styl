body
  margin 0
  padding 0
.grid
  #canvas
    position absolute
    display block
    // cursor default
    cursor default
.left-block
  position absolute
  right 0px
  .controls
  .config
    vertical-align top
    width 60px
    margin 40px 40px 0 0
    z-index 10
    .input-group
      margin-bottom 10px
    .colorpicker
    .actions
      input
        background #ccc
        height 40px
      button
        display block
        width 60px
        height 60px
        background #ccc
        // border 1px solid #aaa
        font-size 2em
        outline none
        &:first-child
          border-bottom 0px
        &:last-child
          border-top 0px
      .selected
        color #ccc
        background #333
