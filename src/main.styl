body
  margin 0
  padding 0
.grid
  display inline-block
  width 700px 
  #canvas
    display block
    margin 20px
    border 1px solid #333
    
    // cursor default
    cursor default
.controls
  display inline-block
  vertical-align top
  width 100px
  .colorpicker
    input
      background #ccc
      height 30px
  .actions
    margin-top 30px
    button
      display block
      width 50px
      height 30px
      background #ccc
      border 1px solid #aaa
      outline none
      &:first-child
        border-bottom 0px
      &:last-child
        border-top 0px
    .selected
      color #ccc
      background #333
