// pixel-ratio(n)
//   (min--moz-device-pixel-ratio: n), 
//   (-o-min-device-pixel-ratio: n/1), 
//   (-webkit-min-device-pixel-ratio: n), 
//   (min-device-pixel-ratio: n)

body
  margin 0
  padding 0
.grid
  #canvas
    position absolute
    display block
    // cursor default
    cursor default
.right-block
  position absolute
  right 0px
  @media 
  (-webkit-min-device-pixel-ratio: 2), 
  (min-resolution: 192dpi)
    bottom 40px
  .controls
  .config
    vertical-align top
    width 60px
    margin 40px 40px 0 0
    z-index 10
    @media 
    (-webkit-min-device-pixel-ratio: 2), 
    (min-resolution: 192dpi)
      width 180px
    .input-group
      margin-bottom 10px
    .colorpicker
    .actions
      input
        background #ccc
        height 40px
      button
        display block
        width 60px
        height 60px
        background #ccc
        // border 1px solid #aaa
        font-size 2em
        outline none
      @media 
      (-webkit-min-device-pixel-ratio: 2), 
      (min-resolution: 192dpi)
        button
          width 180px
          height 180px
          font-size 5em
        &:first-child
          border-bottom 0px
        &:last-child
          border-top 0px
      .selected
        color #ccc
        background #333

