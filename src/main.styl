body
  margin 0
  padding 0
.grid
  #canvas
    position absolute
    display block
    // cursor default
    cursor default
.left-block
  position absolute
  right 30px
  .controls
  .config
    vertical-align top
    width 100px
    margin-top 30px
    z-index 10
    .input-group
      margin-bottom 10px
    .colorpicker
    .actions
      input
        background #ccc
        height 40px
      button
        display block
        width 50px
        height 30px
        background #ccc
        // border 1px solid #aaa
        outline none
        &:first-child
          border-bottom 0px
        &:last-child
          border-top 0px
      .selected
        color #ccc
        background #333
